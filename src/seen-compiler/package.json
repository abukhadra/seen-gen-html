{
    "name": "seen-compiler",
    "version": "0.1.2",
    "type": "module",
    "description": "seen compiler",
    "files": [
        "./"
    ],
    "keywords": [
        "seen",
        "programming language",
        "compiler",
        "س",
        "لغة برمجة",
        "مترجم"
    ],
    "main": "src/main.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/abukhadra/seen-compiler.git"
    },
    "scripts": {
        "build" : "npm i && vite build",
        "postbuild" : "npm run minify",        
        "preinstall" : "npm run clean-out",
        "minify": "esbuild scompiler.js --minify --outfile=scompiler.js --allow-overwrite",
        "clean": "npm run clean-out && rm -rf ./node_modules",
        "clean-out" : "rm -rf ./scompiler.js",
        "ex": "node ./examples/hello-world.js",
        "ex-ar": "node ./examples/ar-salam.js"
    },
    "dependencies": {
      "seen-gen-js" : "github:abukhadra/seen-gen-js",
      "seen-gen-html" : "github:abukhadra/seen-gen-html"
    },  
    "author": "Mustafa Abukhadra",
    "license": "MIT",
    "homepage": "https://seenlang.org",
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.1.4",
        "esbuild": "0.24.0"
    }
}
