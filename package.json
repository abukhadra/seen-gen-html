
{
    "name": "seen-gen-html",
    "version": "0.1.2",
    "type": "module",
    "description": "seen html generator",
    "files": [
        "./"
    ],
    "keywords": [
        "seen",
        "programming language",
        "compiler",
        "س",
        "لغة برمجة",
        "مترجم"
    ],
    "main": "src/main.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/abukhadra/seen-gen-html.git"
    },
    "scripts": {
        "build" : "npm i && vite build",
        "postbuild" : "npm run minify",        
        "preinstall" : "npm run clean",
        "minify": "esbuild gen-html.js --minify --outfile=gen-html.js --allow-overwrite",
        "clean": "rm -rf ./gen-html.js && rm -rf ./node_modules"
    },
    "dependencies": {
        "seen-compiler" : "github:abukhadra/seen-compiler",
        "seen-gen-js" : "github:abukhadra/seen-gen-js"
      },    
    "author": "Mustafa Abukhadra",
    "license": "MIT",
    "homepage": "https://seenlang.org",
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.1.4",
        "esbuild": "0.24.0"
    }
}
